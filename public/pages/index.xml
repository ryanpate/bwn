    <item>
      <title>Crypto Market Overview</title>
      <link>http://localhost:1313/pages/market-overview/</link>
      <pubDate>Fri, 10 Jan 2025 00:00:00 +0000</pubDate>
      <guid>http://localhost:1313/pages/market-overview/</guid>
      <description>&lt;p&gt;Get real-time insights into the cryptocurrency market with our live price tracking and interactive charts.&lt;/p&gt;&#xA;&lt;h2 id=&#34;live-market-prices&#34;&gt;Live Market Prices&lt;/h2&gt;&#xA;&lt;p&gt;Track the latest prices of major cryptocurrencies, updated every 30 seconds.&lt;/p&gt;&#xA;&lt;div class=&#34;crypto-ticker-widget&#34; id=&#34;crypto-ticker&#34;&gt;&#xA;    &lt;h3 class=&#34;ticker-widget-title&#34;&gt;&#xA;        &lt;span class=&#34;live-indicator&#34;&gt;&lt;/span&gt;&#xA;        Live Crypto Prices&#xA;    &lt;/h3&gt;&#xA;    &lt;div class=&#34;ticker-grid&#34; id=&#34;ticker-grid&#34;&gt;&#xA;        &lt;div class=&#34;ticker-skeleton&#34;&gt;Loading prices...&lt;/div&gt;&#xA;    &lt;/div&gt;&#xA;    &lt;div class=&#34;ticker-footer&#34;&gt;&#xA;        &lt;span class=&#34;update-time&#34; id=&#34;update-time&#34;&gt;Last updated: --&lt;/span&gt;&#xA;        &lt;button class=&#34;refresh-btn&#34; onclick=&#34;fetchCryptoPrices()&#34;&gt;&#xA;            &lt;svg xmlns=&#34;http://www.w3.org/2000/svg&#34; width=&#34;16&#34; height=&#34;16&#34; viewBox=&#34;0 0 24 24&#34; fill=&#34;none&#34; stroke=&#34;currentColor&#34; stroke-width=&#34;2&#34; stroke-linecap=&#34;round&#34; stroke-linejoin=&#34;round&#34;&gt;&#xA;                &lt;polyline points=&#34;23 4 23 10 17 10&#34;&gt;&lt;/polyline&gt;&#xA;                &lt;polyline points=&#34;1 20 1 14 7 14&#34;&gt;&lt;/polyline&gt;&#xA;                &lt;path d=&#34;M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15&#34;&gt;&lt;/path&gt;&#xA;            &lt;/svg&gt;&#xA;            Refresh&#xA;        &lt;/button&gt;&#xA;    &lt;/div&gt;&#xA;&lt;/div&gt;&#xA;&#xA;&lt;style&gt;&#xA;.ticker-widget-title {&#xA;    font-size: 1.5rem;&#xA;    font-weight: 700;&#xA;    margin-bottom: 1.5rem;&#xA;    display: flex;&#xA;    align-items: center;&#xA;    gap: 0.75rem;&#xA;    background: linear-gradient(135deg, #667eea, #764ba2);&#xA;    -webkit-background-clip: text;&#xA;    background-clip: text;&#xA;    -webkit-text-fill-color: transparent;&#xA;}&#xA;&#xA;.live-indicator {&#xA;    width: 12px;&#xA;    height: 12px;&#xA;    background: #10b981;&#xA;    border-radius: 50%;&#xA;    display: inline-block;&#xA;    animation: pulse-live 2s infinite;&#xA;}&#xA;&#xA;@keyframes pulse-live {&#xA;    0% {&#xA;        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);&#xA;    }&#xA;    70% {&#xA;        box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);&#xA;    }&#xA;    100% {&#xA;        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);&#xA;    }&#xA;}&#xA;&#xA;.ticker-skeleton {&#xA;    grid-column: 1 / -1;&#xA;    text-align: center;&#xA;    padding: 2rem;&#xA;    color: rgba(255, 255, 255, 0.5);&#xA;    font-style: italic;&#xA;}&#xA;&#xA;.ticker-footer {&#xA;    display: flex;&#xA;    justify-content: space-between;&#xA;    align-items: center;&#xA;    margin-top: 1rem;&#xA;    padding-top: 1rem;&#xA;    border-top: 1px solid rgba(255, 255, 255, 0.1);&#xA;}&#xA;&#xA;.update-time {&#xA;    font-size: 0.85rem;&#xA;    color: rgba(255, 255, 255, 0.5);&#xA;}&#xA;&#xA;.refresh-btn {&#xA;    display: inline-flex;&#xA;    align-items: center;&#xA;    gap: 0.5rem;&#xA;    padding: 0.5rem 1rem;&#xA;    background: rgba(102, 126, 234, 0.1);&#xA;    border: 1px solid rgba(102, 126, 234, 0.2);&#xA;    border-radius: 8px;&#xA;    color: #667eea;&#xA;    font-size: 0.875rem;&#xA;    cursor: pointer;&#xA;    transition: all 0.3s ease;&#xA;}&#xA;&#xA;.refresh-btn:hover {&#xA;    background: rgba(102, 126, 234, 0.2);&#xA;    transform: translateY(-2px);&#xA;}&#xA;&#xA;.refresh-btn svg {&#xA;    transition: transform 0.3s ease;&#xA;}&#xA;&#xA;.refresh-btn:hover svg {&#xA;    transform: rotate(180deg);&#xA;}&#xA;&#xA;.ticker-item-card {&#xA;    position: relative;&#xA;    overflow: hidden;&#xA;}&#xA;&#xA;.ticker-item-card::before {&#xA;    content: &#39;&#39;;&#xA;    position: absolute;&#xA;    top: 0;&#xA;    left: -100%;&#xA;    width: 100%;&#xA;    height: 100%;&#xA;    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);&#xA;    transition: left 0.5s ease;&#xA;}&#xA;&#xA;.ticker-item-card:hover::before {&#xA;    left: 100%;&#xA;}&#xA;&#xA;.ticker-sparkline {&#xA;    margin-top: 0.5rem;&#xA;    height: 30px;&#xA;    opacity: 0.7;&#xA;}&#xA;&lt;/style&gt;&#xA;&#xA;&lt;script&gt;&#xA;&#xA;const CRYPTO_SYMBOLS = [&#39;BTC&#39;, &#39;ETH&#39;, &#39;BNB&#39;, &#39;SOL&#39;, &#39;XRP&#39;, &#39;ADA&#39;, &#39;AVAX&#39;, &#39;DOT&#39;, &#39;MATIC&#39;, &#39;LINK&#39;, &#39;UNI&#39;, &#39;ATOM&#39;];&#xA;const API_URL = &#39;https://api.coingecko.com/api/v3/simple/price&#39;;&#xA;&#xA;async function fetchCryptoPrices() {&#xA;    const tickerGrid = document.getElementById(&#39;ticker-grid&#39;);&#xA;    const updateTime = document.getElementById(&#39;update-time&#39;);&#xA;    &#xA;    &#xA;    tickerGrid.innerHTML = &#39;&lt;div class=&#34;ticker-skeleton&#34;&gt;Fetching latest prices...&lt;/div&gt;&#39;;&#xA;    &#xA;    try {&#xA;        &#xA;        const coinIds = {&#xA;            &#39;BTC&#39;: &#39;bitcoin&#39;,&#xA;            &#39;ETH&#39;: &#39;ethereum&#39;,&#xA;            &#39;BNB&#39;: &#39;binancecoin&#39;,&#xA;            &#39;SOL&#39;: &#39;solana&#39;,&#xA;            &#39;XRP&#39;: &#39;ripple&#39;,&#xA;            &#39;ADA&#39;: &#39;cardano&#39;,&#xA;            &#39;AVAX&#39;: &#39;avalanche-2&#39;,&#xA;            &#39;DOT&#39;: &#39;polkadot&#39;,&#xA;            &#39;MATIC&#39;: &#39;matic-network&#39;,&#xA;            &#39;LINK&#39;: &#39;chainlink&#39;,&#xA;            &#39;UNI&#39;: &#39;uniswap&#39;,&#xA;            &#39;ATOM&#39;: &#39;cosmos&#39;&#xA;        };&#xA;        &#xA;        const ids = Object.values(coinIds).join(&#39;,&#39;);&#xA;        const response = await fetch(`${API_URL}?ids=${ids}&amp;vs_currencies=usd&amp;include_24hr_change=true&amp;include_sparkline=true`);&#xA;        &#xA;        if (!response.ok) throw new Error(&#39;Failed to fetch prices&#39;);&#xA;        &#xA;        const data = await response.json();&#xA;        &#xA;        &#xA;        tickerGrid.innerHTML = &#39;&#39;;&#xA;        &#xA;        &#xA;        CRYPTO_SYMBOLS.forEach(symbol =&gt; {&#xA;            const coinId = coinIds[symbol];&#xA;            const coinData = data[coinId];&#xA;            &#xA;            if (coinData) {&#xA;                const price = coinData.usd;&#xA;                const change = coinData.usd_24h_change;&#xA;                &#xA;                const card = document.createElement(&#39;div&#39;);&#xA;                card.className = &#39;ticker-item-card&#39;;&#xA;                card.innerHTML = `&#xA;                    &lt;div class=&#34;ticker-symbol&#34;&gt;${symbol}&lt;/div&gt;&#xA;                    &lt;div class=&#34;ticker-price&#34;&gt;$${formatPrice(price)}&lt;/div&gt;&#xA;                    &lt;div class=&#34;ticker-change ${change &gt;= 0 ? &#39;positive&#39; : &#39;negative&#39;}&#34;&gt;&#xA;                        ${change &gt;= 0 ? &#39;↑&#39; : &#39;↓&#39;} ${Math.abs(change).toFixed(2)}%&#xA;                    &lt;/div&gt;&#xA;                `;&#xA;                &#xA;                tickerGrid.appendChild(card);&#xA;            }&#xA;        });&#xA;        &#xA;        &#xA;        const now = new Date();&#xA;        updateTime.textContent = `Last updated: ${now.toLocaleTimeString()}`;&#xA;        &#xA;    } catch (error) {&#xA;        console.error(&#39;Error fetching crypto prices:&#39;, error);&#xA;        tickerGrid.innerHTML = `&#xA;            &lt;div class=&#34;ticker-skeleton&#34;&gt;&#xA;                Unable to load prices. &#xA;                &lt;button onclick=&#34;fetchCryptoPrices()&#34; style=&#34;margin-left: 10px; text-decoration: underline; cursor: pointer;&#34;&gt;&#xA;                    Try again&#xA;                &lt;/button&gt;&#xA;            &lt;/div&gt;&#xA;        `;&#xA;    }&#xA;}&#xA;&#xA;function formatPrice(price) {&#xA;    if (price &gt;= 1000) {&#xA;        return price.toLocaleString(&#39;en-US&#39;, { maximumFractionDigits: 0 });&#xA;    } else if (price &gt;= 1) {&#xA;        return price.toLocaleString(&#39;en-US&#39;, { maximumFractionDigits: 2, minimumFractionDigits: 2 });&#xA;    } else {&#xA;        return price.toLocaleString(&#39;en-US&#39;, { maximumFractionDigits: 4, minimumFractionDigits: 2 });&#xA;    }&#xA;}&#xA;&#xA;&#xA;document.addEventListener(&#39;DOMContentLoaded&#39;, fetchCryptoPrices);&#xA;&#xA;&#xA;setInterval(fetchCryptoPrices, 30000);&#xA;&lt;/script&gt;&#xA;&lt;h2 id=&#34;bitcoin-price-chart&#34;&gt;Bitcoin Price Chart&lt;/h2&gt;&#xA;&lt;p&gt;Analyze Bitcoin&amp;rsquo;s price movements with our interactive chart. Switch between different time frames to identify trends.&lt;/p&gt;</description>
    </item>
